
@{
    Layout = null;
    //var personas = ViewData.Model;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet" href="~/Content/bootstrap.css" />

    <title>@ViewBag.Titulo</title>
</head>
<body>

    <div class="text-center">
        <h2>LISTADO MAESTRO DE PRODUCTOS</h2>
    </div>

    <!--FORMULARIO CREAR NUEVO REPUESTO -->
    <div class="container">
        <button type="button" class="btn btn-danger" data-toggle="modal" data-target="#form">
            Crear Nuevo Repuesto
        </button>
    </div>

    <div class="modal fade" id="form" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-header border-bottom-0">
                    <h5 class="modal-title" id="exampleModalLabel">Agregar Nuevo Repuesto</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <form>
                    <div class="modal-body">
                        <div class="form-group" >
                            <label for="des">Descripción del Repuesto</label>
                            <input type="text" class="form-control" id="des" placeholder="Ingresar Descripcion">

                        </div>
                        <div class="form-group">
                            <label for="stock">Cantidad</label>
                            <input type="number" class="form-control" id="stock" placeholder="Ingresar Stock de Repuestos">
                        </div>

                    </div>
                    <div class="modal-footer border-top-0 d-flex justify-content-center">
                        <button type="submit" class="btn btn-success">Agregar</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!--TABLA DE CONTENIDO -->


    <div>
        <table class="table table-dark">
            <thead>
                <tr>
                    <th scope="col">ID</th>
                    <th scope="col">Descripcion</th>
                    <th scope="col">Stock</th>
                    <th scope="col">Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var producto in ViewBag.productos)
                {
                <tr>
                    <th scope="row">@producto.id</th>
                    <td>@producto.descripcion</td>
                    <td>@producto.stock</td>

                    <!-- MODAL BUTTON VER -->
                    <td>
                        <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal">Ver</button>

                        <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                            <div class="modal-dialog modal-dialog-centered" role="document">
                                <div class="modal-content">
                                    <div class="modal-header border-bottom-0">
                                        <h5 class="modal-title" id="exampleModalLabel">Vista de Repuestos</h5>
                                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                            <span aria-hidden="true">&times;</span>
                                        </button>
                                    </div>
                                   
                                            <div class="modal-body">
                                                <div class="form-group">
                                                    <label for="des">Descripción del Repuesto</label>
                                                    <input type="text" class="form-control" id="des" placeholder="Ingresar Descripcion">

                                                </div>
                                                <div class="form-group">
                                                    <label for="stock">Cantidad</label>
                                                    <input type="number" class="form-control" id="stock" placeholder="Ingresar Stock de Repuestos">
                                                </div>

                                            </div>
                                       
                                        <div class="modal-footer">
                                            <button type="button" class="btn btn-secondary" data-dismiss="modal">Cerrar</button>
                                            <button type="button" class="btn btn-primary">Modificar</button>
                                        </div>
                                    
                                </div>
                            </div>
                        </div>
                    </td>
                    <!-- BUTTON ELIMINAR-->
                    <td>
                        <button type="button" class="btn btn-danger">Eliminar</button>
                    </td>


                </tr>
                }
            </tbody>
        </table>
    </div>
    <script src="~/Scripts/jquery-3.0.0.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
</body>
</html>
