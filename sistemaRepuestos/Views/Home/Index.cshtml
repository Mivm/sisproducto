
@{
    Layout = null;
    //var personas = ViewData.Model;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet" href="~/Content/bootstrap.css" />



    <title>@ViewBag.Titulo</title>
</head>
<body>
    <h2>LISTADO MAESTRO DE PRODUCTOS</h2>
    <div>
        <table class="table table-dark">
            <thead>
                <tr>
                    <th scope="col">ID</th>
                    <th scope="col">Descripcion</th>
                    <th scope="col">Stock</th>
                    <th scope="col">Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var producto in ViewBag.productos)
                {
                    <tr>
                        <th scope="row">@producto.id</th>
                        <td>@producto.descripcion</td>
                        <td>@producto.stock</td>
                        <td><a class="btn btn-primary" href="#" role="button">Ver</a></td>
                        <td><a class="btn btn-primary" href="#" role="button">Modificar</a></td>
                        <td><a class="btn btn-primary" href="#" role="button">Eliminar</a></td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <script src="~/Scripts/jquery-3.0.0.min.js"></script>
</body>


</html>
